<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginBottom="25dp"
    android:layout_height="60dp"
    android:weightSum="10">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="4">

        <TextView
            android:fontFamily="@font/bmdohyon"
            android:background="@color/transparent"
            android:id="@+id/station_name"
            android:text="수원역"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20dp"/>
        <TextView
            android:visibility="gone"
            android:fontFamily="@font/bmdohyon"
            android:background="@color/transparent"
            android:id="@+id/station_id"
            android:text="수원역"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="0.1sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_weight="6">
        <FrameLayout
            android:id="@+id/opst_layout"
            android:layout_marginRight="15dp"
            android:visibility="gone"
            android:background="@drawable/selectd_stn_border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_marginTop="2dp"
                android:layout_marginRight="3dp"
                android:background="@color/transparent"
                android:textColor="#6C6C6C"
                android:fontFamily="@font/bmdohyon"
                android:text="오피스텔"
                android:textSize="15dp"
                android:id="@+id/opst_btn"
                android:layout_width="110dp"
                android:layout_height="wrap_content">
            </Button>


            <TextView
                android:layout_marginTop="0.5dp"
                android:layout_marginRight="2dp"
                android:layout_width="13dp"
                android:layout_height="15dp"
                android:layout_gravity="right|center_vertical"
                android:fontFamily="@font/bmdohyon"
                android:text="X"
                android:textColor="#A8A8A8"
                android:textSize="13dp"></TextView>

        </FrameLayout>
        <FrameLayout
            android:id="@+id/apt_layout"
            android:layout_marginRight="15dp"
            android:visibility="gone"
            android:background="@drawable/selectd_stn_border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/apt_btn"
                android:layout_marginTop="2dp"
                android:layout_marginRight="3dp"
                android:background="@color/transparent"
                android:textColor="#6C6C6C"
                android:fontFamily="@font/bmdohyon"
                android:text="아파트"
                android:textSize="15dp"
                android:layout_width="90dp"
                android:layout_height="wrap_content">
            </Button>


            <TextView
                android:layout_marginTop="0.5dp"
                android:layout_marginRight="2dp"
                android:layout_width="13dp"
                android:layout_height="15dp"
                android:layout_gravity="right|center_vertical"
                android:fontFamily="@font/bmdohyon"
                android:text="X"
                android:textColor="#A8A8A8"
                android:textSize="13dp"></TextView>

        </FrameLayout>
        <FrameLayout
            android:id="@+id/or_layout"
            android:visibility="gone"
            android:background="@drawable/selectd_stn_border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/or_btn"
                android:layout_marginTop="2dp"
                android:layout_marginRight="3dp"
                android:background="@color/transparent"
                android:textColor="#6C6C6C"
                android:fontFamily="@font/bmdohyon"
                android:text="원룸"
                android:textSize="15dp"
                android:layout_width="70dp"
                android:layout_height="wrap_content">
            </Button>


            <TextView
                android:layout_marginTop="0.5dp"
                android:layout_marginRight="2dp"
                android:layout_width="13dp"
                android:layout_height="15dp"
                android:layout_gravity="right|center_vertical"
                android:fontFamily="@font/bmdohyon"
                android:text="X"
                android:textColor="#A8A8A8"
                android:textSize="13dp"></TextView>

        </FrameLayout>

    </LinearLayout>


</LinearLayout>